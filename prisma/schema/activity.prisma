model DailyStudyPlan {
  id           String   @id @default(uuid())
  userId       String
  createdAt    DateTime @default(now())
  startTime    DateTime
  content      String
  weeklyPlanId String?
  isCompleted  Boolean  @default(false)

  user       User              @relation(fields: [userId], references: [id])
  weeklyPlan WeeklyStudyPlans? @relation(fields: [weeklyPlanId], references: [id])

  @@map("daily_study_plans")
}

model WeeklyStudyPlans {
  id          String   @id @default(uuid())
  userId      String
  title       String
  createdAt   DateTime @default(now())
  isCompleted Boolean

  user           User             @relation(fields: [userId], references: [id])
  FavouritePlans FavouritePlans[]
  DailyStudyPlan DailyStudyPlan[]

  @@map("weekly_study_plans")
}

model FavouritePlans {
  id     String @id @default(uuid())
  userId String
  planId String

  user             User              @relation(fields: [userId], references: [id])
  WeeklyStudyPlans WeeklyStudyPlans? @relation(fields: [planId], references: [id])

  @@unique([userId, planId])
  @@map("saved_plans")
}
